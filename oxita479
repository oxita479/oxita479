<script>
let products = JSON.parse(localStorage.getItem("products") || "[]");
let cart = JSON.parse(localStorage.getItem("cart") || "[]");

// === SAVE DATA ===
function saveData(){
localStorage.setItem("products", JSON.stringify(products));
localStorage.setItem("cart", JSON.stringify(cart));
updatePayPalLink();
}

// === RENDER PRODUCTS ===
function renderProducts(){
const grid=document.getElementById("productsGrid");
grid.innerHTML="";

products.forEach((p,index)=>{
const card=document.createElement("div");
card.className="product-card";

card.innerHTML=`
<div class="badge">BEST</div>
<img src="${p.image}">
<h3>${p.name}</h3>
<div><b>${p.price}â‚¬</b></div>
<button class="btn" onclick="addToCart(${index})">Ajouter</button>
<button class="btn" style="background:#cc0000;margin-left:5px;"
onclick="deleteProduct(${index})">Supprimer</button>
`;

grid.appendChild(card);
});
}

// === ADD PRODUCT ===
function addProduct(){
const name=document.getElementById("productName").value;
const price=document.getElementById("productPrice").value;
const file=document.getElementById("productImage").files[0];

if(!name||!price||!file){alert("Remplis tout !");return;}

const reader=new FileReader();
reader.onload=function(e){
products.push({name:name,price:Number(price),image:e.target.result});
saveData();
renderProducts();
};
reader.readAsDataURL(file);

document.getElementById("productName").value="";
document.getElementById("productPrice").value="";
document.getElementById("productImage").value="";
}

// === DELETE PRODUCT ===
function deleteProduct(index){
if(!confirm("Supprimer ce produit ?")) return;
products.splice(index,1);
saveData();
renderProducts();
}

// === CART WITH QUANTITY ===
function addToCart(index){
const product=products[index];
const existing=cart.find(item=>item.name===product.name);

if(existing){existing.qty += 1;}
else{cart.push({...product, qty:1});}

saveData();
renderCart();
}

function changeQty(i,delta){
cart[i].qty += delta;
if(cart[i].qty <= 0){cart.splice(i,1);}
saveData();
renderCart();
}

function renderCart(){
const items=document.getElementById("cartItems");
const count=document.getElementById("cartCount");
const total=document.getElementById("cartTotal");

items.innerHTML="";
let sum=0;
let totalQty=0;

cart.forEach((item,i)=>{
sum += item.price * item.qty;
totalQty += item.qty;
items.innerHTML+=`
<div class="cart-item">
<b>${item.name}</b><br>
${item.price}â‚¬ Ã— ${item.qty}
<br>
<button class="btn" onclick="changeQty(${i},-1)">âž–</button>
<button class="btn" onclick="changeQty(${i},1)">âž•</button>
</div>
`;
});

count.textContent=totalQty;
total.textContent=sum.toFixed(2);
updatePayPalLink();
}

// === UPDATE PAYPAL LINK ===
function updatePayPalLink(){
const paypalBtn=document.getElementById("paypalBtn");
if(cart.length===0){
paypalBtn.href="#";
paypalBtn.style.opacity=0.5;
paypalBtn.style.pointerEvents="none";
return;
}else{
paypalBtn.style.opacity=1;
paypalBtn.style.pointerEvents="auto";
}

// lien PayPal.me simple avec montant total arrondi
let total = cart.reduce((sum,item)=>sum+item.price*item.qty,0);
total=Math.ceil(total); 
paypalBtn.href=`https://paypal.me/kelyanLetellier/${total}`;
paypalBtn.target="_blank";
}

// === TOGGLE CART ===
function toggleCart(){
document.getElementById("cartPanel").classList.toggle("open");
}

// === INIT ===
renderProducts();
renderCart();
</script>

